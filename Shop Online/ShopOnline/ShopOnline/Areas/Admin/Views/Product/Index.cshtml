@model IEnumerable<ShopOnline.Models.ProductCategory>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <strong class="text-uppercase text-danger">Danh sách các sản phẩm </strong>
            </div>
            <div class="col-md-6 text-end">
                <a href="@Url.Action("Create","Product")" class="btn btn-sm btn-success">
                    Add
                </a>
                <a href="@Url.Action("Trash","Product")" class="btn btn-sm btn-danger">Trash</a>
            </div>




        </div>
    </div>
    <div class="card-body p-3">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th style="width:100px" class="text-center"></th>
                    <th style="width:100px" class="text-center">Hình ảnh</th>
                    <th style="width:200px" class="text-center">Tên sản phẩm</th>
                    <th style="width:300px" class="text-center">Loại sản phẩm</th>
                    <th style="width:250px" class="text-center">Chức năng</th>
                    <th style="width:300px" class="text-center">ID</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">
                            <input name="checkID" type="checkbox" />
                        </td>
                        
                        <td>
                            <img src="~/Public/images/Product/@item.Img" class="img-fluid " />
                        </td>
                        <td>@item.Name</td>

                        <td>@item.CatName</td>
                        

                        <td class="text-center">
                            @if (item.Status == 1)
                            {
                                <a href="@Url.Action("Status", "Product", new { @id = item.Id })" class="btn btn-sm btn-success">
                                    On
                                </a>
                            }
                            else
                            {
                                <a href="@Url.Action("Status", "Product", new { @id = item.Id })" class="btn btn-sm btn-danger">
                                    Off
                                </a>
                            }

                            <a href="@Url.Action("Edit", "Product", new { @id = item.Id })" class="btn btn-sm btn-info">
                                Edit
                            </a>

                            <a href="@Url.Action("Details", "Product", new { @id = item.Id })" class="btn btn-sm btn-warning">
                                View
                            </a>

                            <a href="@Url.Action("DelTrash", "Product", new { @id = item.Id })" class="btn btn-sm btn-danger">
                                Trash
                            </a>




                        </td>
                        <td class="text-center">@item.Id</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
