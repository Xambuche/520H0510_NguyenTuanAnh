<!DOCTYPE html>
<html>
<head>
    <title>@Page.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Public/css/LayoutAdmin.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    @RenderSection("head", required: false)
</head>
<body>
    <section class="clearfix header bg-danger">
        <div class="container-fluid">
            <nav class="navbar navbar-expand-lg navbar-dark bg-danger">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#">Navbar</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Product
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="@Url.Action("Index","Product")">List Sản phẩm</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Create","Product")">Add Sản phẩm</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Index","Category")">List loại sản phẩm</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Create","Category")">Add Loại sản phẩm</a></li>
                                </ul>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Bài viết
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="@Url.Action("Index","Post")">Danh sách bài viết</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Create","Post")">Add Danh sách bài viết</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Index","Topic")">Danh sách chủ đề</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Create","Topic")">Add Danh sách chủ đê</a></li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link disabled">Disabled</a>
                            </li>
                        </ul>
                        <form class="d-flex" role="search">
                            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                            <button class="btn btn-outline-success" type="submit">Search</button>
                        </form>
                    </div>
                </div>
            </nav>
        </div>
    </section>

    <section class="clearfix modal-content">
        <div class="container-fluid py-3">
            @RenderBody()
        </div>
    </section>

    <section class="clearfix card-footer text-bg-danger">
        <div class="container-fluid text-white text-center py-3">
               520H0510_NguyenTuanAnh
        </div>
    </section>

    


    @RenderSection("head", required: false)

</body>
</html>
