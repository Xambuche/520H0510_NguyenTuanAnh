@model IEnumerable<ShopOnline.Models.Topic>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <strong class="text-uppercase text-danger">Danh sách chủ đê </strong>
            </div>
            <div class="col-md-6 text-end">
                <a href="@Url.Action("Create","Topic")" class="btn btn-sm btn-success">
                    Add
                </a>
                <a href="@Url.Action("Trash","Topic")" class="btn btn-sm btn-danger">Trash</a>
            </div>




        </div>
    </div>
    <div class="card-body p-3">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th style="width:100px" class="text-center"></th>
                    <th style="width:100px" class="text-center">Tên chủ đê</th>
                    <th style="width:200px" class="text-center">Từ khóa</th>
                    <th style="width:300px" class="text-center">Mô tả</th>
                    <th style="width:200px" class="text-center">Chức năng</th>
                    <th style="width:300px" class="text-center">Trạng thái</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">
                            <input name="checkID" type="checkbox" />
                        </td>

                        
                        <td>@item.Name</td>
                        <td>
                            
                                @item.Metaky
                            
                        </td>

                        <td>
                            
                                @item.Metadesc
                           
                        </td>

                        <td class="text-center">
                            @if (item.Status == 1)
                            {
                                <a href="@Url.Action("Status", "Topic", new { @id = item.Id })" class="btn btn-sm btn-success">
                                    On
                                </a>
                            }
                            else
                            {
                                <a href="@Url.Action("Status", "Topic", new { @id = item.Id })" class="btn btn-sm btn-danger">
                                    Off
                                </a>
                            }

                            <a href="@Url.Action("Edit", "Topic", new { @id = item.Id })" class="btn btn-sm btn-info">
                                Edit
                            </a>

                            <a href="@Url.Action("Details", "Topic", new { @id = item.Id })" class="btn btn-sm btn-warning">
                                View
                            </a>

                            <a href="@Url.Action("DelTrash", "Topic", new { @id = item.Id })" class="btn btn-sm btn-danger">
                                Trash
                            </a>




                        </td>
                        <td class="text-center">@item.Status</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

